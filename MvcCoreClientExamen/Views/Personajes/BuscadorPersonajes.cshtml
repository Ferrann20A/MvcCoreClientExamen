@model IEnumerable<MvcCoreClientExamen.Models.Personaje>

@{
    ViewData["Title"] = "Personajes";
}

@{
    List<string> series = ViewData["series"] as List<string>;
}

<h1>Buscador de Personajes</h1>

<form method="post">
    <label>Seleccione una serie:</label>
    <select name="serie" class="form-control">
        @foreach(string s in series)
        {
            <option value="@s">@s</option>
        }
    </select>
    <br />
    <button class="btn btn-outline-warning">
        Buscar
    </button>
</form>


@if(Model != null)
{
    <table class="table table-warning">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imagen)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Serie)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        <img src="@item.Imagen" width="200" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Serie)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
