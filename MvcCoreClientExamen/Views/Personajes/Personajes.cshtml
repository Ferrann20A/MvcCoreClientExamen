@model IEnumerable<MvcCoreClientExamen.Models.Personaje>

@{
    ViewData["Title"] = "Personajes";
}

<h1>Personajes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<p>
    <a asp-controller="Personajes" asp-action="BuscadorPersonajes">Buscador Personajes</a>
</p>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdPersonaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersonaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@item.Imagen" width="200" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Serie)
            </td>
            <td>
                <a asp-controller="Personajes" asp-action="Edit"
                    asp-route-id="@item.IdPersonaje" class="btn btn-info">
                    Update
                </a>
                <a asp-controller="Personajes" asp-action="Delete"
                    asp-route-id="@item.IdPersonaje" class="btn btn-danger">
                    Delete
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
